
@{
    ViewBag.Title =Resources.General.Login;
}
@using (Html.BeginForm(actionName:"Login",controllerName:"Account"))
{
    <div class="form-horizontal">
        <h4>@Resources.General.Login</h4>
        <hr />
   
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">
                    @Resources.General.Login
                </h3>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <label class="control-label col-md-2">@Resources.General.UserName</label>
                    <div class="col-md-10">
                        <input name="username" id="username" class="form-control " />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">@Resources.General.Password</label>
                    <div class="col-md-10">
                        <input name="password" id="password" class="form-control " type="password" /><span style="color:red">@ViewBag.MessageCheck</span>
                    </div>
                </div>


                <div class="form-group">
                    <label class="control-label col-sm-2" for="Remember">@Resources.General.Remember</label>

                    <div class="col-sm-10">
                        <div class="checkbox">
                            <input type="checkbox" name="Remember" id="Remember" value="Remember" class="" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value=@Resources.General.Submit class="btn btn-primary " />
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <h4>
                    @Resources.General.MessageValid
                </h4>
            </div>
        </div>
    </div>
}
    <div>
        @Html.ActionLink(Resources.General.BackToList, MVC.Users.Index())
    </div>
