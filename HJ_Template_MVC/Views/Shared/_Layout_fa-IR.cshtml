<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="@Links.Content.bootstrap_min_css" rel="stylesheet" />
    <script src="@Links.scripts.jquery_3_2_1_min_js"></script>
    <script src="@Links.Content.bootstrap_min_js"></script>
    <link href="@Links.Content.bootstrap_theme_min_css" rel="stylesheet" />
    <link href="@Links.Content.bootstrap_rtl_min_css" rel="stylesheet" />
    <script src="@Links.scripts.jquery_validate_vsdoc_js"></script>
    <script src="@Links.scripts.jquery_validate_min_js"></script>
    <script src="@Links.scripts.jquery_validate_unobtrusive_min_js"></script>
    <script src="@Links.scripts.modernizr_2_6_2_js"></script>
    <link href="@Links.Content.Site_css" rel="stylesheet" type="text/css" />
    <title>@ViewBag.Title - My ASP.NET Application</title>

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="lan col-xs-8">
                <ul class="nav navbar-nav  ">
                    <li class="active">
                    </li>
                    <li class="dropdown">
                        <a href="#">@Resources.General.InfoMain <span class="caret"></span></a>
                    </li>
                    <li><a href="#">@Resources.General.Abute </a></li>
                    <li><a class="glyphicon glyphicon-envelope icon" href="#">&nbsp;@Resources.General.Contact</a></li>
                </ul>
            </div>
            <div class="col-xs-2">
                <a href="~/Home/ChangeCulture?name=fa-IR" class="langu">فارسی</a>
                |
                <a href="~/Home/ChangeCulture?name=en-US" class="langu">English</a>
            </div>
            <div class="col-xs-2">
                @Html.ActionLink(Resources.General.Logout, MVC.Account.Logout(), MVC.Account.Name)
                <a href="~/Users/Create" style="margin:10px">@Resources.General.Register </a>

                @if (Request.Cookies["currentuser"] != null)
                {
                    <span class="hello">@Resources.General.Hello  @Request.Cookies["currentuser"].Value.ToString()</span>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="~/Content/Image/conference-banner2017-v1.jpg" style="width:100%;height:250px" />
                        </div>
                        <div class="item">
                            <img src="~/Content/Image/SCADE-User-Group-Conference-Banner.png" style="width:100%;height:250px" />
                        </div>
                        <div class="item">
                            <img src="~/Content/Image/WelcomePresentationbanner.jpg" style="width:100%;height:250px" />
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>


            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer></footer>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>