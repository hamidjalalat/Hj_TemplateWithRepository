@model ViewModels.Users.CreateViewModel
@using Infrastructure
<div id="createDialog" class="modal fade" style="z-index: 1000" tabindex="-1" role="dialog" aria-labelledby="createDialogLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="createDialogLabel">ذخیره</h4>

            </div>

            <div class="modal-body form-horizontal">

                <form id="frmMain">

                    @Html.HjEditor(model => model.Name)

                    @Html.HjEditor(model => model.Password)

                    @Html.HjEditor(model => model.ConfirmPassword)

                    <div class="row form-group">
                        <div class="col-sm-9 col-sm-offset-3">
                            <button type="button" id="btnCreate" class="btn btn-primary">ذخیره</button>
                        </div>
                    </div>
                </form>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">بستن</button>
            </div>

        </div>
    </div>
</div>



